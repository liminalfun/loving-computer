---
layout: layouts/base.njk
section: post
---

<article>
  <h1>{{ title }}</h1>
  <p>
    <time datetime="{{ post.date | machineDate }}">
				{% if post.data.time %}
					<small>{{ post.date | readableDate }} {{ post.data.time }} with {{ post.data.author }}</small>
				{% endif %}
		</time>
  </p>

  {{ layoutContent | safe }}

  {% if tags %}
    <p>
    {% for tag in tags %}
      {%- if tag != "post" -%}
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
    </p>
  {% endif %}

</article>

<nav>
  <a href="{{ '/blog/' | url }}">‚Üê Blog index</a>
</nav>
